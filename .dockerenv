# STORAGE
STAYAWAY_STORAGE_DIR=./etc/storage

# TLS
STAYAWAY_MINICA_CERTS_DIR=./etc/tls/certs
STAYAWAY_ETC_TRAEFIK_DIR=./etc/traefik

# MAILBOX
STAYAWAY_MAILBOX_PASSWORD=mailboxpass
STAYAWAY_MAILBOX_USERNAME=mailer
STAYAWAY_MAILBOX_PUBLIC_HOST=mailbox.stayaway.test
STAYAWAY_MAILBOX_INTERNAL_HOST=smtp.mail.docker
STAYAWAY_MAILBOX_HTTP_PORT=1080
STAYAWAY_MAILBOX_SMTP_PORT=1025

# MKDOCS
STAYAWAY_ETC_MKDOCS=./etc/mkdocs
STAYAWAY_MKDOCS_HOST=mkdocs.stayaway.test
STAYAWAY_MKDOCS_PORT=8000

# GRAFANA STACK
STAYAWAY_ETC_GRAFANA_STACK=./etc/grafana-stack
STAYAWAY_GRAFANA_STACK_ENABLED=true
STAYAWAY_GRAFANA_HOST=grafana.stayaway.test
STAYAWAY_GRAFANA_LOG_LEVEL=debug
STAYAWAY_GRAFANA_HTTP_PORT=3000
STAYAWAY_GRAFANA_ADMIN_USERNAME=grafana
STAYAWAY_GRAFANA_ADMIN_PASSWORD=superpass
STAYAWAY_GRAFANA_PROVISIONING_PATH=/etc/grafana/provisioning

STAYAWAY_LOKI_HOST=loki.stayaway.test
STAYAWAY_LOKI_INTERNAL_HOST=loki
STAYAWAY_LOKI_HTTP_PORT=3100
STAYAWAY_LOKI_CONFIG_PATH=/etc/loki/config.yaml

STAYAWAY_PROMTAIL_CONFIG_PATH=/etc/promtail/config.yaml
STAYAWAY_PROMTAIL_HTTP_PORT=9080

STAYAWAY_PROMETHEUS_HOST=prometheus.stayaway.test
STAYAWAY_PROMETHEUS_HTTP_PORT=9090
STAYAWAY_PROMETHEUS_INTERNAL_HOST=prometheus
STAYAWAY_PROMETHEUS_HTTP_PORT=9090

# REDIS
STAYAWAY_ETC_REDIS=./etc/redis
STAYWAY_REDIS_HOST=redis
STAYAWAY_REDIS_PASS=redis-pass

# MONGODB
STAYAWAY_MONGODB_INITDB_ROOT_USER=root
STAYAWAY_MONGODB_INITDB_ROOT_PASSWORD=mongo-root-pass
STAYAWAY_MONGODB_INTERNAL_URI=mongodb://root:mongo-root-pass@mongo:27017/

# MONGODB EXPRESS
STAYAWAY_MONGODB_EXPRESS_HOST=mongo.stayaway.test
STAYAWAY_MONGODB_EXPRESS_PORT=8081
STAYAWAY_MONGODB_EXPRESS_ADMIN_USER=root
STAYAWAY_MONGODB_EXPRESS_ADMIN_PASSWORD=mongo-root-pass
STAYAWAY_MONGODB_EXPRESS_MONGO_HOST=mongodb://root:mongo-root-pass@mongo:27017/
STAYAWAY_MONGODB_EXPRESS_BASIC_AUTH=false

# MINIO
STAYAWAY_MINIO_CONSOLE_PORT=9001
STAYAWAY_MINIO_CONSOLE_HOST=minio.stayaway.test
STAYAWAY_MINIO_API_PORT=9000
STAYAWAY_MINIO_API_HOST=minio-api.stayaway.test
STAYAWAY_MINIO_STORAGE_DIR=/etc/storage/minio
STAYAWAY_MINIO_ROOT_USER=minio-root
STAYAWAY_MINIO_ROOT_PASSWORD=minio-root-password

# VENUES
VENUES_AIR_DEBUG=false
VENUES_DIR=./svc/venues
VENUES_HOST=venues.stayaway.test
VENUES_HTTP_PORT=8080

VENUES_REDIS_PASS=venues-redis-pass
VENUES_REDIS_DB=0
VENUES_REDIS_CACHE_DB=0