# STORAGE
STAYAWAY_STORAGE_DIR=./etc/storage

# TLS
STAYAWAY_MINICA_CERTS_DIR=./etc/tls/certs
STAYAWAY_ETC_TRAEFIK_DIR=./etc/traefik

# MAILBOX
STAYAWAY_MAILBOX_PASSWORD=mailboxpass
STAYAWAY_MAILBOX_USERNAME=mailer
STAYAWAY_MAILBOX_PUBLIC_HOST=mailbox.stayaway.test
STAYAWAY_MAILBOX_INTERNAL_HOST=smtp.mail.docker
STAYAWAY_MAILBOX_HTTP_PORT=1080
STAYAWAY_MAILBOX_SMTP_PORT=1025

# MKDOCS
STAYAWAY_MKDOCS_HOST=mkdocs.stayaway.test
STAYAWAY_MKDOCS_PORT=8000

# GRAFANA STACK
STAYAWAY_ETC_GRAFANA_STACK=./etc/grafana-stack
STAYAWAY_GRAFANA_STACK_ENABLED=true
STAYAWAY_GRAFANA_HOST=grafana.stayaway.test
STAYAWAY_GRAFANA_LOG_LEVEL=debug
STAYAWAY_GRAFANA_HTTP_PORT=3000
STAYAWAY_GRAFANA_ADMIN_USERNAME=grafana
STAYAWAY_GRAFANA_ADMIN_PASSWORD=superpass
STAYAWAY_GRAFANA_PROVISIONING_PATH=/etc/grafana/provisioning

STAYAWAY_LOKI_HOST=loki.stayaway.test
STAYAWAY_LOKI_INTERNAL_HOST=loki
STAYAWAY_LOKI_HTTP_PORT=3100
STAYAWAY_LOKI_CONFIG_PATH=/etc/loki/config.yaml

STAYAWAY_PROMTAIL_CONFIG_PATH=/etc/promtail/config.yaml
STAYAWAY_PROMTAIL_HTTP_PORT=9080

STAYAWAY_PROMETHEUS_HOST=prometheus.stayaway.test
STAYAWAY_PROMETHEUS_HTTP_PORT=9090
STAYAWAY_PROMETHEUS_INTERNAL_HOST=prometheus
STAYAWAY_PROMETHEUS_HTTP_PORT=9090
